{  
    "customBaseDir" : "/Users/gukeming/projects/ido-server/logs/",  
    "customDefaultAtt" :{  
        "type": "console",  
        "absolute": true,  
        "alwaysIncludePattern": true  
    },  
    "appenders": [  
            {
                "type": "console", 
                "category": "console"
            },  
            {
                "pattern": "debug/yyyyMMddhh.log", 
                "category": "logDebug"
            },  
            {
                "pattern": "info/yyyyMMddhh.log", 
                "category": "logInfo"
            },  
            {
                "pattern": "warn/yyyyMMddhh.log", 
                "category": "logWarn"
            },  
            {
                "pattern": "err/yyyyMMddhh.log",
                "category": "logErr"
            }  
        ],  
        "replaceConsole": true,
        "levels":{ 
            "logDebug": "DEBUG", 
            "logInfo": "DEBUG", 
            "logWarn": "DEBUG", 
            "logErr": "DEBUG"
        }  
}